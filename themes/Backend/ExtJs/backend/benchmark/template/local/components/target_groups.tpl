<div class="col-50 targetgroup--shop">
    <h4>Shop</h4>
    <div class="like-shop-ice"></div>
    <div class="data">
        <span class="data--headline high-contrast">Frauen</span><br>
        <span class="data--headline shop-color">[[ local.customers.women.percentage ]]%</span><br>
        <span class="data--txt">[[ local.customers.women.amount ]]</span><br>
        <span class="data--txt">Ø [[ local.customers.women.averageAge ]] Jahre</span>
        <br><br>
        <span class="data--headline high-contrast">Männer</span><br>
        <span class="data--headline shop-color">[[ local.customers.men.percentage ]]%</span><br>
        <span class="data--txt">[[ local.customers.men.amount ]]</span><br>
        <span class="data--txt">Ø [[ local.customers.men.averageAge ]] Jahre</span><br>
    </div>

    <div class="data-wrapper">
        <span class="data--headline high-contrast">Alter</span><br>

        <div class="row">
            <div class="col-33 data--txt shop-color">50 +</div>
            <div class="col-66">
                <target-group-bar name="above50"></target-group-bar>
            </div>
        </div>
        <div class="row">
            <div class="col-33 data--txt shop-color">30 bis 50</div>
            <div class="col-66">
                <target-group-bar name="between30And50"></target-group-bar>
            </div>
        </div>
        <div class="row">
            <div class="col-33 data--txt shop-color">15 bis 30</div>
            <div class="col-66">
                <target-group-bar name="between15And30"></target-group-bar>
            </div>
        </div>
    </div>
</div>