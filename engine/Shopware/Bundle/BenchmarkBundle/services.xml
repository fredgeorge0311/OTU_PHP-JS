<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter id="shopware.benchmark.benchmark_endpoint">https://someurl</parameter>
        <parameter id="shopware.benchmark.statistics_endpoint">https://someurl</parameter>
    </parameters>

    <services>
        <service id="shopware.benchmark_bundle.collector" class="Shopware\Bundle\BenchmarkBundle\BenchmarkCollector">
            <argument type="collection" />
        </service>

        <service id="shopware.benchmark_bundle.local_collector" class="Shopware\Bundle\BenchmarkBundle\BenchmarkLocalCollector">
            <argument type="collection" />
        </service>

        <service id="shopware.benchmark_bundle.providers.shop" class="Shopware\Bundle\BenchmarkBundle\Provider\ShopProvider">
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.shopware" class="Shopware\Bundle\BenchmarkBundle\Provider\ShopwareProvider">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="shopware.release"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.manufacturers" class="Shopware\Bundle\BenchmarkBundle\Provider\ManufacturerProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.products" class="Shopware\Bundle\BenchmarkBundle\Provider\ProductsProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.emotions" class="Shopware\Bundle\BenchmarkBundle\Provider\EmotionsProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.categories" class="Shopware\Bundle\BenchmarkBundle\Provider\CategoriesProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.analytics" class="Shopware\Bundle\BenchmarkBundle\Provider\AnalyticsProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.plugins" class="Shopware\Bundle\BenchmarkBundle\Provider\PluginsProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.payments" class="Shopware\Bundle\BenchmarkBundle\Provider\PaymentsProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.customers" class="Shopware\Bundle\BenchmarkBundle\Provider\CustomersProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.shipments" class="Shopware\Bundle\BenchmarkBundle\Provider\ShipmentsProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.orders" class="Shopware\Bundle\BenchmarkBundle\Provider\OrdersProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_provider" />
        </service>

        <service id="shopware.benchmark_bundle.providers.local_orders" class="Shopware\Bundle\BenchmarkBundle\Provider\LocalOrdersProvider">
            <argument type="service" id="dbal_connection"/>
            <tag name="shopware.benchmark_local_provider" />
        </service>

        <service id="shopware.benchmark_bundle.controller_subscriber" class="Shopware\Bundle\BenchmarkBundle\DependencyInjection\EventListener\ControllerSubscriber">
            <tag name="shopware.event_subscriber" />
        </service>

        <service id="shopware.benchmark_bundle.repository.config" class="Shopware\Bundle\BenchmarkBundle\Repository\ConfigRepository">
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="shopware.benchmark_bundle.components.template_caching_handler" class="Shopware\Bundle\BenchmarkBundle\Services\TemplateCachingHandler">
            <argument type="service" id="dbal_connection"/>
        </service>

        <!-- Transmissin services -->
        <service class="Shopware\Bundle\BenchmarkBundle\BenchmarkTransmission" id="shopware_bundle_benchmark.benchmark_transmission">
            <argument id="shopware.benchmark_bundle.collector" type="service"/>
            <argument id="shopware_bundle_benchmark.benchmark_client" type="service"/>
        </service>

        <service class="Shopware\Bundle\BenchmarkBundle\BenchmarkStatisticsService" id="shopware_bundle_benchmark.benchmark_statistics_service">
            <argument type="service" id="shopware_bundle_benchmark.benchmark_transmission"/>
        </service>

        <service class="Shopware\Bundle\BenchmarkBundle\StatisticsClient" id="shopware_bundle_benchmark.statistics_client">
            <argument>%shopware.benchmark.benchmark_endpoint%</argument>
            <argument id="shopware.benchmark_bundle.client" type="service"/>
            <argument id="shopware_bundle_benchmark.hydrator.statistics_response_hydrator" type="service"/>
            <argument id="corelogger" type="service"/>
        </service>

        <service class="Shopware\Bundle\BenchmarkBundle\BenchmarkClient" id="shopware_bundle_benchmark.benchmark_client">
            <argument>%shopware.benchmark.statistics_endpoint%</argument>
            <argument id="shopware.benchmark_bundle.client" type="service"/>
            <argument id="shopware_bundle_benchmark.hydrator.benchmark_response_hydrator" type="service"/>
            <argument id="corelogger" type="service"/>
        </service>

        <service class="Shopware\Bundle\BenchmarkBundle\Hydrator\StatisticsResponseHydrator" id="shopware_bundle_benchmark.hydrator.statistics_response_hydrator"/>
        <service class="Shopware\Bundle\BenchmarkBundle\Hydrator\BenchmarkResponseHydrator" id="shopware_bundle_benchmark.hydrator.benchmark_response_hydrator"/>

        <service id="shopware.benchmark_bundle.client" class="\Http\Client\Curl\Client" />
    </services>
</container>
